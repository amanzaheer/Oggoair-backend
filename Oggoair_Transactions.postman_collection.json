    {
      "name": "Update Transaction",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 600.00,\n  \"description\": \"Updated description\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://localhost:5000/api/transactions/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "transactions", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "REPLACE_WITH_TRANSACTION_ID",
              "description": "MongoDB transaction _id"
            }
          ]
        },
        "description": "Updates a transaction. Replace :id with actual transaction _id from MongoDB."
      },
      "response": []
    },
